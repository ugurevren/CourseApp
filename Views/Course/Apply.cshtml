@model Candidate
<div class="display-6">
    Apply
</div>

<form method="post" asp-action="Apply">
    <div class="form-control my-2">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" |>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-control my-2">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" |>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-control my-2">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" |>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group my-2">
        <label asp-for="Age">Age</label>
        <select asp-for="Age" class="form-control" |>
            <option value="17">under 18</option>
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
            <option value="24">24+</option>
        </select>
    </div>
    <div>
        <fieldset>

            <legend>Select One Course</legend>
            <span asp-validation-for="SelectedCourse" class="text-danger"></span>
            <p>
                <input id="mvc" type="radio" asp-for="SelectedCourse" value="ASP.NET Core MVC" |>
                <label>ASP.NET Core MVC</label>
            </p>
            <p>
                <input id="game" type="radio" asp-for="SelectedCourse" value="Game Development" |>
                <label>Game Development</label>
            </p>
            <p>
                <input id="java" type="radio" asp-for="SelectedCourse" value="Programing with Java" |>
                <label>Programing with Java</label>
            </p>
            <p>
                <input id="csharp" type="radio" asp-for="SelectedCourse" value="Programing with C#" |>
                <label>Programing with C# </label>
            </p>
        </fieldset>
    </div>
    <div>
        <button class="btn btn-primary" type="submit">Apply</button>
        <a class="btn btn-warning" asp-controller="Home" asp-action="Index">Home</a>
    </div>
</form>