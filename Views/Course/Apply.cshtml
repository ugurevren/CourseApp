@model Candidate
<div class="display-6">
    Apply
</div>

<form method = "post" action="/course/apply">
    <div class = "form-control my-2">
        <label>Email</label>
        <input name= "Email" class = "form-control"|>
    </div>
    <div class = "form-control my-2">
        <label>First Name</label>
        <input name= "FirstName" class = "form-control"|>
    </div>
    <div class = "form-control my-2">
        <label>Last Name</label>
        <input name= "LastName" class = "form-control"|>
    </div>
    <div class = "form-group my-2">
        <label>Age</label>
        <select name="Age" class = "form-control"|>
            <option value="17">under 18</option>
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
            <option value="24">24+</option>
        </select>
    </div>
    <div>
        <fieldset>
            <legend>Select One Course</legend>
            <p>
                <input id="mvc" type="radio" name ="SelectedCourse" value="ASP.NET Core MVC"|>
                <label>ASP.NET Core MVC</label>
            </p>
            <p>
                <input id="game" type="radio" name ="SelectedCourse" value="Game Development"|>
                <label>Game Development</label>
            </p>
            <p>
                <input id="java" type="radio" name ="SelectedCourse" value="Programing with Java"|>
                <label>Programing with Java</label>
            </p>
            <p>
                <input id="csharp" type="radio" name ="SelectedCourse" value="Programing with C#"|>
                <label>Programing with C# </label>
            </p>
        </fieldset>
    </div>
    <div>
        <button class="btn btn-primary" type="submit">Apply</button>
        <a class = "btn btn-warning" href="/">Home</a>
    </div>
</form>